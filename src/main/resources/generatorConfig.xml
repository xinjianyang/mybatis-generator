<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--指定数据库驱动jar的位置-->
    <classPathEntry location="E:\loaclwarehouse\mysql\mysql-connector-java\5.1.40\mysql-connector-java-5.1.40.jar"/>

    <!--
        id: 自定义
        targetRuntime: - MyBatis3Simple 生成简单的CRUD
                       - MyBatis3 生成带Example类的CRUD
    -->
    <context id="mybatisConfig" targetRuntime="MyBatis3">

        <!--禁用注释-->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!--连接数据库的信息-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql:///jian?useSSL=false"
                        userId="root" password="310628"/>

        <!--生成Entity类-->
        <javaModelGenerator targetPackage="com.kaishengit.entity" targetProject="src/main/java"/>
        <!--Xml映射文件-->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>
        <!--Mapper接口-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.kaishengit.mapper" targetProject="src/main/java"/>

        <!--table的配置-->
        <table tableName="detail"/>

    </context>
</generatorConfiguration>